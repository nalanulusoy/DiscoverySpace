<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tv_rover_name"
            android:textColor="@android:color/background_dark" android:textSize="18sp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tv_info_img" android:textColor="@color/colorAccent"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp" android:id="@+id/img_photos_mars"/>
</LinearLayout>